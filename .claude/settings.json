{
  "permissions": {
    "allow": [
      "Bash(docker-compose:*)",
      "Bash(npm run:*)",
      "Bash(python -m pytest:*)",
      "Bash(black:*)",
      "Bash(flake8:*)",
      "Bash(mypy:*)",
      "Bash(mkdir:*)",
      "Edit(.claude/cc10x/*)",
      "Write(.claude/cc10x/*)",
      "Read(.claude/cc10x/*)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/credentials*)",
      "Read(**/secrets/**)",
      "Read(**/*token*)",
      "Read(**/*password*)"
    ]
  }
}
