# =============================================================================
# RobotApp Mecademic Integration - Environment Configuration Template
# =============================================================================
# Copy this file to '.env' and customize values for your environment
# Never commit secrets or production values to version control

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
LOG_LEVEL=INFO
DEBUG_MODE=false

# -----------------------------------------------------------------------------
# Network Interface Binding (NIC-specific routing)
# -----------------------------------------------------------------------------
# Specify which network interface to bind outgoing robot connections to
# Leave empty to use default system routing
# Examples:
#   - "eth0" (Linux)
#   - "en0" (macOS)  
#   - "Ethernet" (Windows)
#   - "192.168.1.100" (bind to specific IP address)
ROBOT_NIC_INTERFACE=

# Alternative: Bind to specific local IP address
# This takes precedence over NIC_INTERFACE if both are set
ROBOT_BIND_IP=

# -----------------------------------------------------------------------------
# Mecademic Robot Configuration
# -----------------------------------------------------------------------------
# Primary robot connection settings
MECA_ROBOT_IP=192.168.0.100
MECA_CONTROL_PORT=10000
MECA_MONITOR_PORT=10001

# Connection behavior
MECA_CONNECTION_TIMEOUT=10.0
MECA_RETRY_ATTEMPTS=3
MECA_RETRY_DELAY=2.0
MECA_KEEPALIVE_INTERVAL=30.0

# Movement parameters (safe defaults)
MECA_DEFAULT_SPEED=25.0
MECA_DEFAULT_ACCELERATION=25.0
MECA_MAX_SPEED=100.0
MECA_MAX_ACCELERATION=100.0

# Safety and monitoring
MECA_HEARTBEAT_INTERVAL=5.0
MECA_STATUS_CACHE_DURATION=1.0
MECA_COMMAND_TIMEOUT=30.0

# -----------------------------------------------------------------------------
# Service Management
# -----------------------------------------------------------------------------
# Exclusive control lease system
ROBOT_LEASE_DURATION=300.0  # 5 minutes
ROBOT_LEASE_RENEWAL=30.0    # Renew every 30 seconds
ROBOT_MAX_CONCURRENT_COMMANDS=1

# WebSocket streaming
WEBSOCKET_STATUS_INTERVAL=10  # 10Hz status updates
WEBSOCKET_MAX_CONNECTIONS=10

# -----------------------------------------------------------------------------
# Development and Testing
# -----------------------------------------------------------------------------
# Enable fake/mock robot server for testing
ENABLE_FAKE_ROBOT=false
FAKE_ROBOT_HOST=127.0.0.1
FAKE_ROBOT_CONTROL_PORT=10010
FAKE_ROBOT_MONITOR_PORT=10011

# Development features
ENABLE_DEBUG_LOGGING=false
ENABLE_API_CORS=true
ENABLE_ROBOT_SIMULATION=false

# Testing overrides
TEST_MODE=false
TEST_ROBOT_IP=127.0.0.1
TEST_CONTROL_PORT=10010
TEST_MONITOR_PORT=10011

# -----------------------------------------------------------------------------
# Logging Configuration  
# -----------------------------------------------------------------------------
LOG_FORMAT=json
LOG_FILE_PATH=./logs/robotapp.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_ROTATION_TIME=24h

# Component-specific log levels
LOG_LEVEL_TRANSPORT=INFO
LOG_LEVEL_DRIVER=INFO
LOG_LEVEL_SERVICE=INFO
LOG_LEVEL_WEBSOCKET=INFO

# -----------------------------------------------------------------------------
# Security and Access Control
# -----------------------------------------------------------------------------
# API key for robot control access (optional)
ROBOT_API_KEY=

# Allowed client IP addresses (comma-separated, optional)
ALLOWED_CLIENT_IPS=

# Enable HTTPS (requires SSL certificates)
ENABLE_HTTPS=false
SSL_CERT_FILE=
SSL_KEY_FILE=

# -----------------------------------------------------------------------------
# Advanced Configuration
# -----------------------------------------------------------------------------
# TCP socket options
TCP_NODELAY=true
TCP_KEEPALIVE=true
TCP_USER_TIMEOUT=30000

# Memory and performance
MAX_CONCURRENT_CONNECTIONS=100
CONNECTION_POOL_SIZE=5
COMMAND_QUEUE_SIZE=100

# Monitoring and metrics
ENABLE_METRICS=false
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=60.0

# -----------------------------------------------------------------------------
# Environment-specific Overrides
# -----------------------------------------------------------------------------
# Uncomment and customize for specific deployment environments

# Development
# DEBUG_MODE=true
# LOG_LEVEL=DEBUG
# ENABLE_FAKE_ROBOT=true

# Testing
# TEST_MODE=true
# MECA_ROBOT_IP=127.0.0.1
# MECA_CONTROL_PORT=10010

# Production
# LOG_LEVEL=WARNING
# DEBUG_MODE=false
# ENABLE_HTTPS=true
# ALLOWED_CLIENT_IPS=192.168.1.0/24